<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bruhshua.carpool">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Pool"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activities.LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".Activities.RegisterActivity" android:label="Registration"/>
        <activity android:name=".Activities.ResetPasswordActivity" android:label="Reset Password"/>
        <activity android:name=".Activities.MainActivity" android:label="Carpool"/>


